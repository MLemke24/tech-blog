<ol class="post-list">
    {{#each posts}}
    <li>
        <article class="post">
            <div class="title">
                <a href="{{title}}" target="_blank">{{title}}</a>
            </div>
            <div class="content">
                <span>({{content}})</span>
            </div>
            <div class="meta">
                Post Comments:
                <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
            </div>
        </article>
    </li>
    {{/each}}
</ol>