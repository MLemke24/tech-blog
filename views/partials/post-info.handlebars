<article class="post">
            <div class="home-title">
                <h3>{{title}}</h3>
            </div>
            <div class="content">
                <span>{{content}}</span>
            </div>
            
        </article>
        <div class="comments">
                <h5>
                Post Comments:
                </h5>
                <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
                <div class="text">
                    {{comment_text}}
                </div>
            </div>