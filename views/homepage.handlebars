<ol class="post-list">
    {{#each posts}}
    <li>
        <article class="post">
            <div class="title">
                <h3>{{title}}</h3>
            </div>
            <div class="content">
                <span>({{content}})</span>
            </div>
            <div class="meta">
                Post Comments:
                <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
                <div class="text">
                    {{comment_text}}
                </div>
            </div>
        </article>
    </li>
    {{/each}}
</ol>